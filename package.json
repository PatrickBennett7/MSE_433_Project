{
  "name": "mse-433-project",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "dev": "concurrently -n frontend,backend -c cyan,green \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "pnpm --filter @mse/frontend dev",
    "dev:backend": "python -m uvicorn src.main:app --reload --host 0.0.0.0 --port 3000 --app-dir apps/backend",
    "build": "pnpm --filter @mse/shared build && pnpm --filter @mse/frontend build",
    "typecheck": "pnpm --filter @mse/shared typecheck && python -m py_compile apps/backend/src/main.py"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}